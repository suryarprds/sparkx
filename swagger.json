{
  "openapi": "3.0.0",
  "info": {
    "title": "SparkX Robot Fleet Management API",
    "version": "1.0.0",
    "description": "## Overview\n\nThe SparkX Robot Fleet Management API provides comprehensive endpoints for managing and monitoring a global fleet of autonomous robots.\n\n### Key Features\n- **Real-time Monitoring**: Live telemetry, sensor data, and GPS tracking\n- **Alert Management**: Create, acknowledge, and resolve system alerts\n- **Predictive Maintenance**: AI-powered maintenance scheduling and component health tracking\n- **Task Management**: Assign, track, and monitor robot tasks\n- **Analytics & Reporting**: Historical trends, fleet statistics, and performance metrics\n- **Global Fleet**: Manage 100+ robots across 6 countries and 40+ cities"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "Local Development Server"
    },
    {
      "url": "https://sparkx.azurewebsites.net/api",
      "description": "Production Server (Azure)"
    }
  ],
  "tags": [
    { "name": "Health", "description": "API health check endpoints" },
    { "name": "Robots", "description": "Robot fleet management operations" },
    { "name": "Telemetry", "description": "Real-time robot telemetry data" },
    { "name": "Sensors", "description": "Sensor data from robots" },
    { "name": "Alerts", "description": "Alert and notification management" },
    { "name": "Maintenance", "description": "Maintenance scheduling and tracking" },
    { "name": "Diagnostics", "description": "Robot diagnostic information" },
    { "name": "Tasks", "description": "Task assignment and management" },
    { "name": "Analytics", "description": "Historical data and analytics" },
    { "name": "Statistics", "description": "Fleet-wide statistics and metrics" }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "description": "Returns the health status of the API server",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" },
                    "timestamp": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/robots": {
      "get": {
        "tags": ["Robots"],
        "summary": "Get all robots",
        "description": "Retrieve a list of all robots with optional filtering by status, country, region, or location",
        "parameters": [
          { "name": "status", "in": "query", "schema": { "type": "string" }, "description": "Filter by robot status (online, offline, charging, error)" },
          { "name": "country", "in": "query", "schema": { "type": "string" }, "description": "Filter by country" },
          { "name": "region", "in": "query", "schema": { "type": "string" }, "description": "Filter by region" },
          { "name": "location", "in": "query", "schema": { "type": "string" }, "description": "Filter by location" }
        ],
        "responses": {
          "200": {
            "description": "List of robots retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Robot" }
                }
              }
            }
          },
          "500": { "description": "Server error" }
        }
      }
    },
    "/robots/{id}": {
      "get": {
        "tags": ["Robots"],
        "summary": "Get robot by ID",
        "description": "Retrieve detailed information about a specific robot including telemetry, sensors, cameras, joints, alerts, and diagnostics",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Robot ID (e.g., SPARKX-001)" }
        ],
        "responses": {
          "200": {
            "description": "Robot details retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/RobotDetail" }
              }
            }
          },
          "404": { "description": "Robot not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/robots/{id}/position": {
      "patch": {
        "tags": ["Robots"],
        "summary": "Update robot position",
        "description": "Update the GPS coordinates of a robot",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Robot ID" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["latitude", "longitude"],
                "properties": {
                  "latitude": { "type": "number", "format": "float", "example": 19.076 },
                  "longitude": { "type": "number", "format": "float", "example": 72.8777 },
                  "heading": { "type": "number", "format": "float", "example": 45.5 }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Position updated successfully" },
          "400": { "description": "Invalid input" },
          "404": { "description": "Robot not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/robots/{id}/telemetry": {
      "get": {
        "tags": ["Telemetry"],
        "summary": "Get robot telemetry history",
        "description": "Retrieve historical telemetry data for a specific robot",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Robot ID" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 100 }, "description": "Maximum number of records" },
          { "name": "hours", "in": "query", "schema": { "type": "integer", "default": 24 }, "description": "Time window in hours" }
        ],
        "responses": {
          "200": {
            "description": "Telemetry data retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Telemetry" }
                }
              }
            }
          },
          "500": { "description": "Server error" }
        }
      }
    },
    "/robots/{id}/sensors": {
      "get": {
        "tags": ["Sensors"],
        "summary": "Get robot sensor data",
