            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "totalRobots": { "type": "integer" },
                    "statusCounts": { "type": "object" },
                    "unresolvedAlerts": { "type": "integer" },
                    "criticalAlerts": { "type": "integer" },
                    "averages": {
                      "type": "object",
                      "properties": {
                        "battery": { "type": "number" },
                        "temperature": { "type": "number" },
                        "signal": { "type": "number" }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": { "description": "Server error" }
        }
      }
    },
