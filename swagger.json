  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message describing what went wrong",
            "example": "Robot not found"
          },
          "details": {
            "type": "string",
            "description": "Additional error details (optional)",
            "example": "Robot with ID SPARKX-999 does not exist in the database"
          }
        }
      },
      "Success": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Operation completed successfully"
          }
        }
      },
      "Robot": {
        "type": "object",
        "description": "Robot entity with latest telemetry snapshot",
        "required": ["id", "name", "status"],
        "properties": {
          "id": { 
            "type": "string", 
            "description": "Unique robot identifier",
            "example": "SPARKX-001" 
          },
          "name": { 
            "type": "string", 
            "description": "Human-readable robot name",
            "example": "SparkX Alpha" 
          },
          "status": { 
            "type": "string", 
            "enum": ["online", "offline", "charging", "error"], 
            "description": "Current operational status",
            "example": "online" 
          },
          "battery": { 
            "type": "number", 
            "format": "float", 
            "minimum": 0,
            "maximum": 100,
            "description": "Current battery level percentage (0-100)",
            "example": 85.5 
          },
          "signal": { 
            "type": "number", 
            "format": "float",
            "minimum": 0,
            "maximum": 100, 
            "description": "Network signal strength percentage (0-100)",
            "example": 92.3 
          },
          "temperature": { 
            "type": "number", 
            "format": "float",
            "description": "System temperature in Celsius",
            "example": 42.5 
          },
          "location": { 
            "type": "string",
            "description": "Physical deployment location (City - State format)",
            "example": "Mumbai - Maharashtra" 
          },
          "country": { 
            "type": "string",
            "description": "Country of deployment",
            "example": "India" 
          },
          "state": { 
            "type": "string",
            "description": "State or province",
            "example": "Maharashtra" 
          },
          "region": { 
            "type": "string",
            "description": "Geographic region",
            "example": "South Asia" 
          },
          "lastUpdated": { 
            "type": "string", 
            "format": "date-time",
            "description": "Timestamp of last communication",
            "example": "2025-12-01T10:30:00Z"
          },
          "cpuLoad": { 
            "type": "number", 
            "format": "float",
            "minimum": 0,
            "maximum": 100,
            "description": "CPU load percentage (0-100)",
            "example": 35.2 
          },
          "gpsCoordinates": {
            "type": "object",
            "description": "Current GPS location",
            "properties": {
              "lat": { 
                "type": "number", 
                "format": "float",
                "minimum": -90,
                "maximum": 90,
                "description": "Latitude coordinate",
                "example": 19.076 
              },
              "lng": { 
