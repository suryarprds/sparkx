          },
          "region": {
            "type": "string",
            "example": "South Asia"
          },
          "telemetry": { 
            "type": "array",
            "description": "Latest telemetry record",
            "items": { "$ref": "#/components/schemas/Telemetry" } 
          },
          "sensors": { 
            "type": "array",
            "description": "Latest sensor readings (IMU, LiDAR, environmental)",
            "items": { "type": "object" } 
