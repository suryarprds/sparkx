      "Alert": {
        "type": "object",
        "description": "System alert or notification",
        "required": ["id", "robotId", "alertType", "severity", "title", "message"],
        "properties": {
          "id": { 
            "type": "integer",
            "description": "Alert record ID",
            "example": 789
          },
          "robotId": { 
            "type": "string",
            "description": "Robot that generated the alert",
            "example": "SPARKX-001"
          },
          "alertType": { 
            "type": "string",
            "description": "Type of alert",
            "enum": ["system_error", "overheating", "low_battery", "sensor_failure", "network_issue", "maintenance_due", "collision_warning", "custom"],
            "example": "low_battery"
          },
          "severity": { 
            "type": "string", 
            "enum": ["critical", "warning", "info"],
            "description": "Alert severity level",
            "example": "warning"
          },
          "title": { 
            "type": "string",
            "description": "Brief alert title",
            "example": "Low Battery Warning"
          },
          "message": { 
            "type": "string",
            "description": "Detailed alert message",
            "example": "Battery level has dropped below 20%. Robot should return to charging station."
          },
          "errorCode": { 
            "type": "string",
            "description": "System error code (if applicable)",
            "example": "ERR_BATT_LOW_001"
          },
