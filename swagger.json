      "Telemetry": {
        "type": "object",
        "description": "Time-series telemetry data snapshot",
        "properties": {
          "id": { 
            "type": "integer",
            "description": "Telemetry record ID",
            "example": 12345
          },
          "robotId": { 
            "type": "string",
            "description": "Associated robot ID",
            "example": "SPARKX-001"
          },
          "batteryPercentage": { 
            "type": "number", 
            "format": "float",
            "minimum": 0,
            "maximum": 100,
            "description": "Current battery level (0-100%)",
            "example": 87.5
          },
          "batteryVoltage": { 
            "type": "number", 
            "format": "float",
            "description": "Battery voltage in volts",
            "example": 48.2
          },
          "batteryCurrent": { 
            "type": "number", 
            "format": "float",
            "description": "Current draw/charge in amperes (negative = charging)",
            "example": -2.3
          },
          "batteryTemperatureC": { 
            "type": "number", 
            "format": "float",
            "description": "Battery temperature in Celsius",
            "example": 35.8
          },
          "chargingStatus": { 
            "type": "boolean",
