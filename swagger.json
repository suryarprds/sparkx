            "example": "admin@sparkx.com"
          },
          "isResolved": { 
            "type": "boolean",
            "description": "Has the issue been resolved",
            "example": false
          },
          "resolvedAt": { 
            "type": "string", 
            "format": "date-time",
            "description": "Timestamp when alert was resolved",
            "example": "2025-12-01T11:00:00Z"
          },
          "resolvedBy": { 
            "type": "string",
            "description": "User who resolved the alert",
            "example": "admin@sparkx.com"
          },
          "resolutionNotes": { 
            "type": "string",
            "description": "Notes about how the issue was resolved",
            "example": "Robot returned to charging station. Battery now at 95%."
          },
          "createdAt": { 
            "type": "string", 
            "format": "date-time",
            "description": "Timestamp when alert was created",
            "example": "2025-12-01T10:30:00Z"
          },
          "robot": {
            "type": "object",
            "description": "Simplified robot information",
            "properties": {
              "id": { 
                "type": "string",
                "example": "SPARKX-001"
              },
              "name": { 
                "type": "string",
                "example": "SparkX Alpha"
              },
              "location": { 
                "type": "string",
                "example": "Mumbai - Maharashtra"
              }
            }
          }
        }
      }
