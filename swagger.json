        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "resolvedBy": { "type": "string", "example": "admin@sparkx.com" },
                  "resolutionNotes": { "type": "string", "example": "Rebooted robot and cleared error logs" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Alert resolved successfully" },
          "500": { "description": "Server error" }
        }
      }
    },
