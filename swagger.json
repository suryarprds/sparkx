          },
          "model": { 
            "type": "string",
            "description": "Robot model number",
            "example": "SparkX-Pro-2024"
          },
          "serialNumber": { 
            "type": "string",
            "description": "Manufacturing serial number",
            "example": "SN-2024-001-ALPHA"
          },
          "firmwareVersion": {
            "type": "string",
            "description": "Current firmware version",
            "example": "3.0.0"
          },
          "hardwareVersion": {
            "type": "string",
            "description": "Hardware revision",
            "example": "HW-v2.1"
          },
          "status": { 
            "type": "string",
            "enum": ["online", "offline", "charging", "error"],
            "description": "Current operational status",
            "example": "online"
