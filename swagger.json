          "connectivity": {
            "type": "object",
            "description": "Network connectivity status",
            "properties": {
              "wifi": { 
                "type": "string",
                "enum": ["Excellent", "Good", "Fair", "Poor"],
                "description": "WiFi signal quality",
                "example": "Excellent" 
